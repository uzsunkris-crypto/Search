rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // users: only authenticated users read; only user can update profile (not paidDate)
    match /users/{uid} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update: if request.auth != null && request.auth.uid == uid
                    && !(request.resource.data.keys().hasAny(['paidDate']));
      // paidDate only set by admin / server (Cloud Function)
    }

    // drivers: auth required. driver writes their own doc
    match /drivers/{driverId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == driverId;
      allow delete: if request.auth != null && request.auth.uid == driverId;
    }

    // passengers: auth required. passenger writes their own doc
    match /passengers/{pid} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == pid;
      allow delete: if request.auth != null && request.auth.uid == pid;
    }

    // trips: readable to involved parties; create by passenger
    match /trips/{tripId} {
      allow create: if request.auth != null && request.resource.data.passengerUid == request.auth.uid;
      allow read: if request.auth != null && (request.auth.uid == resource.data.passengerUid || request.auth.uid == resource.data.driverUid);
      allow update: if request.auth != null && (request.auth.uid == resource.data.passengerUid || request.auth.uid == resource.data.driverUid);
    }

    // payments: users can create their own payment record; cannot modify status
    match /payments/{pid} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      allow update, delete: if false;
    }

    // ratings: authenticated users may create rating entries
    match /ratings/{rid} {
      allow create: if request.auth != null && request.resource.data.star >= 1 && request.resource.data.star <= 5;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }

    // support messages
    match /support_messages/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }

    // sos logs
    match /sos/{id} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }

    match /{document=**} { allow read, write: if false; }
  }
}
